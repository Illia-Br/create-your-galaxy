<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <form class="new-item" action="/planets/myplanets" method="POST" autocomplete="off">
    <label>Type: 
      <select name="type">
        <option value="Planet" selected>Planet</option>
        <option value="Moon">Moon</option>
        <option value="Star">Star</option>
        <option value="Asteroid">Asteroid</option>
      </select>
    </label><br>
    <label>Name (required): 
      <input type="text" name="name" placeholder="Any name">
    </label><br>
    <label>Image URL:
      <input type="text" name="imgUrl" placeholder="https://...">
    </label><br>
    <label>Size:
      <input type="text" name="size" placeholder="Number">
    </label><br>
    <label>Share: 
    <input type="checkbox" name="shared" checked
    />
  </label><br>
    <button class="btn btn-primary btn-lg" type="submit">Add Object</button>
    <p>* Leave "Image Url" field blank if you want default picture to be applied</p>
    <p>* "Size" represents your Object's diameter in miles</p>
    <p>*Check "Share" if you allow other people to add your Object to their Galaxies</p>
  </form>

  </main>

<%- include('../partials/footer') %>