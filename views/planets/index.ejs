<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/main.css" />
<%- include('../partials/nav') %>

  <main>
    <h1><%= title %></h1>

    <% planets.forEach(planet => { %>  
      <div class="card text-center w-50">
        <div class="card-body">
          <% if (planet.imgUrl) { %>
            <img
              src="<%= planet.imgUrl %>" 
              alt="<%= planet.name %>"
            />
          <% } else { %>
            <img
              src="/images/planets/default<%= planet.type %>.jpeg" 
              alt="placeholder"
            >
          <% } %>
          <h2 class="card-title"><%= planet.name %></h2>
          <p class="card-text">Type: <%= planet.type %></p>
          <p class="card-text">Size: <%= planet.size %> mph</p>
          <p class="card-text">Created by: <a href="/profiles/<%= planet.createdBy._id %>"><%= planet.createdBy.name %></a></p>
          <% if (user) {%> 
            <% if (planet.shared) { %> 
              <p>This Space Object is shared</p>
              <% if (galaxies.length) { %> 
                <form 
                 action="/galaxies/<%= planet._id %>/planets"
                method="post"
                >
                <label> Choose your Galaxy:
                <select name="galaxyId">
                <% galaxies.forEach(galaxy => { %>
                <% if (!(galaxy.planets.includes(planet._id))) {%> 
                <option value="<%= galaxy._id %>"><%= galaxy.name %></option>
                  <% } %>
                <% }) %>
                </select>
                </label>
                <button type="submit" class="btn btn-primary">Add</button>
                </form>
              <% } else { %>
                <p>You don't have any Galaxies yet <a href="/galaxies/new" class="btn btn-primary">Create new Galaxy</a></p>
              <% } %>
            <% } else {%>
              <p>This Space Object is not shared</p>
            <% } %> 
          <% } %> 
        </div>
      </div>
      <% }) %>

  </main>

  <%- include('../partials/footer') %>
