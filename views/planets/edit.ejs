<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
  <h1 class="title"><%= title %></h1>
  <form class="new-item" action="/planets/<%= planet._id %>?_method=PUT" method="POST" autocomplete="off">
    <label>Type: 
      <select name="type">
        <option value="<%= planet.type %>"><%= planet.type %></option>
        <option value="Planet">Planet</option>
        <option value="Moon">Moon</option>
        <option value="Star">Star</option>
        <option value="Asteroid">Asteroid</option>
      </select>
    </label><br>
    <label>Name (required): 
      <input type="text" name="name" placeholder="Any name" value="<%= planet.name %>">
    </label><br>
    <label>Image URL:
      <input type="text" name="imgUrl" placeholder="https://..." value="<%= planet.imgUrl %>">
    </label><br>
    <label>Size:
      <input type="text" name="size" placeholder="Number" value="<%= planet.speed %>">
    </label><br>
    <label>Share: 
    <input type="checkbox" name="shared" <%= planet.shared ? 'checked' : '' %>
    />
  </label><br>
    <button class="btn btn-primary btn-lg" type="submit">Save Object</button>
    <p>* Leave "Image URL" field blank if you want default picture to be applied</p>
    <p>* "Size" represents your Object's diameter in miles</p>
    <p>*Check "Share" if you allow other people to add your Object to their Galaxies</p>
  </form>
  </main>

<%- include('../partials/footer') %>