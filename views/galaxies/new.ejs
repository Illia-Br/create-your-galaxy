<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
  <h1 class="title"><%= title %></h1>
  <form class="new-item" action="/galaxies/mygalaxies" method="POST" autocomplete="off">
    <label>Name (required): 
      <input type="text" name="name" placeholder="Any name">
    </label><br>
    <label>Image URL:
      <input type="text" name="imgUrl" placeholder="https://...">
    </label><br>
    <label for="galaxy-description">Description:</label> <br>
    <textarea id="galaxy-description" name="description" placeholder="Any description"></textarea><br>
    <button class="btn btn-primary btn-lg" type="submit">Add Galaxy</button>
    <p>* Leave "Image URL" field blank if you want default picture to be applied</p>
  </form>
  </main>

